{{ Form.open(form)|raw }}
{% if(token) %}
    {{ Form.token() }}
{% endif %}    
{% for hidden in hiddens %}
    {{ hidden|raw }}
{% endfor %}    
{% set control=fieldsets[0].field('url') %}        
{{ control.getField(row, control, [])|raw }} 
{% set submits = [] %}

<fieldset name="inputs">
    {% set control=fieldsets[0].field('type') %} 
    <div class="form-block">
        <div class="col-group pt10">
            <div class="col-mb-24 col-12">
                <div class="input-field">
                    {{ control.getField(row, control, [])|raw }} 
                </div>
                {% if errors.has(control.name) %}
                    <span class="input-field__icon"><i class="zmdi zmdi-close"></i></span>
                    <div id="{{ control.id }}_error" class="error">{{ errors.first(control.name, format)|raw }}</div>
                {% endif %}
            </div>

            <div class="col-mb-24 col-12">
                {% set control=fieldsets[0].field('notifications') %}        
                <div class="input-field">
                    {{ control.getField(row, control, [])|raw }} 
                </div>
                {% if errors.has(control.name) %}
                    <span class="input-field__icon"><i class="zmdi zmdi-close"></i></span>
                    <div id="{{ control.id }}_error" class="error">{{ errors.first(control.name, format)|raw }}</div>
                {% endif %}               
            </div>
        </div>
    </div>
</fieldset>
{% if fieldsets[0].types('button') is not empty %}
    <fieldset name="inputs">
        <div class="form-block">
            <div class="col-group">
                <div class="col-mb-24">
                    {% for button in fieldsets[0].types('button') %}    
                        {{ button.getField(row, button, [])|raw }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </fieldset>
{% endif %}  
{{ Form.close()|raw }}


